{
  "expo": {
    "name": "karaworks",
    "slug": "karaworks",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon-karaworks.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "karaworks",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.karaworks"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.karaworks"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-asset",
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./assets/icon-karaworks.png"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you create a new event."
        }
      ]
    ]
  }
}
